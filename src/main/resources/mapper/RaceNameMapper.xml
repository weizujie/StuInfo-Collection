<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.RaceNameMapper">

    <!-- 查询所有赛事名称 -->
    <select id="findAll" resultType="com.example.entity.RaceName">
        select * from t_racename
    </select>

    <insert id="addRaceName">
        insert into t_racename
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="raceName">race_name,</if>
            <if test="comment != null">comment</if>
        </trim>
        <trim prefix="values(" suffix=")" suffixOverrides=",">
            <if test="raceName">#{raceName},</if>
            <if test="comment != null">#{comment}</if>
        </trim>
    </insert>

    <select id="findById" resultType="com.example.entity.RaceName">
        select * from t_racename where id = #{id}
    </select>

    <update id="updateRaceName" parameterType="com.example.entity.RaceName">
        update t_racename
        <trim prefix="set" suffixOverrides=",">
            <if test="raceName != null">race_name = #{raceName},</if>
            <if test="comment != null">comment = #{comment}</if>
        </trim>
        where id = #{id}
    </update>

    <!-- 根据id删除赛事范围 -->
    <delete id="deleteById">
         delete from t_racename where id = #{id}
    </delete>

</mapper>