<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.RaceScopeMapper">

    <!-- 查询所有赛事级别 -->
    <select id="findAll" resultType="com.example.entity.RaceScope">
        select * from t_racescope
    </select>

    <insert id="addRaceScope">
        insert into t_racescope
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="raceScope">race_scope,</if>
            <if test="comment != null">comment</if>
        </trim>
        <trim prefix="values(" suffix=")" suffixOverrides=",">
            <if test="raceScope">#{raceScope},</if>
            <if test="comment != null">#{comment}</if>
        </trim>
    </insert>

    <select id="findById" resultType="com.example.entity.RaceScope">
        select * from t_racescope where id = #{id}
    </select>

    <update id="updateRaceScope" parameterType="com.example.entity.RaceScope">
        update t_racescope
        <trim prefix="set" suffixOverrides=",">
            <if test="raceScope != null">race_scope = #{raceScope},</if>
            <if test="comment != null">comment = #{comment}</if>
        </trim>
        where id = #{id}
    </update>

    <!-- 根据id删除赛事范围 -->
    <delete id="deleteById">
         delete from t_racescope where id = #{id}
    </delete>

</mapper>